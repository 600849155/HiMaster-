.input_face{
  display: flex;
  align-items: center;
  width: 80%;
  height: 40px;
  font-size: 16px;
  margin: 0 auto;
  margin-top: 10px;
  margin-bottom: 30px;
  border: 2px solid #f4f4f4;
  transition: all .25s ease-in-out;
  background: #fff;
}


.ripple {
    position: relative;
}
.ripple:focus{
    outline: none;
}
.ripple:after {
    content: "";
    display: block;
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    pointer-events: none;
    background-color: #333;
    background-repeat: no-repeat;
    background-position: 50%;
    opacity: 0;
    transition: all .3s;
}
.ripple:active:after {
    opacity: .3;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition: 0s;
}


.ripple1 {
    position: relative;
    overflow: hidden;
}
.ripple1:after {
    content: "";
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    background-image: radial-gradient(circle, #666 10%, transparent 10.01%);
    background-repeat: no-repeat;
    background-position: 50%;
    transform: scale(10, 10);
    opacity: 0;
    transition: transform .3s, opacity .5s;
}
.ripple1:active:after {
    transform: scale(0, 0);
    opacity: .3;
    transition: 0s;
}